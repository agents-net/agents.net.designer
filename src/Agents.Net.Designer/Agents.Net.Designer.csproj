<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <UseWPF>true</UseWPF>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="Templates\AgentTemplate.cs" />
    <Compile Remove="Templates\AutofacModuleTemplate.cs" />
    <Compile Remove="Templates\InterceptorAgentTemplate.cs" />
    <Compile Remove="Templates\MessageTemplate.cs" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Agents.Net" Version="2021.0.0-prerelease-20200724045235" />
    <PackageReference Include="Autofac" Version="5.2.0" />
    <PackageReference Include="AutomaticGraphLayout" Version="1.1.7" />
    <PackageReference Include="AutomaticGraphLayout.Drawing" Version="1.1.7" />
    <PackageReference Include="HtmlSanitizer" Version="5.0.331" />
    <PackageReference Include="MaterialDesignThemes" Version="3.1.3" />
    <PackageReference Include="Newtonsoft.Json" Version="12.0.3" />
    <PackageReference Include="Newtonsoft.Json.Schema" Version="3.0.13" />
    <PackageReference Include="NLog" Version="4.7.2" />
    <PackageReference Include="Ookii.Dialogs.Wpf.NETCore" Version="2.1.0" />
  </ItemGroup>
  <ItemGroup>
    <None Include="Templates\InterceptorAgentTemplate.cs">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <None Include="Templates\AgentTemplate.cs">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <None Include="Templates\AutofacModuleTemplate.cs">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <None Include="Templates\MessageTemplate.cs">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>
  <ItemGroup>
    <Reference Include="WpfGraphControl">
      <HintPath>..\Dependencies\WpfGraphControl.dll</HintPath>
    </Reference>
  </ItemGroup>
</Project>